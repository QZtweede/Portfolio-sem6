{% if node.field_content %}
  {% for paragraph in node.field_content %}
    {% set paragraphType = paragraph.entity.type.value.0.target_id %}

    {% if paragraph.entity.field_hidden.value == '1' %}

    {% else %}
      {% if paragraphType == 'text_with_img' %}
        {% include directory ~ '/templates/content/partials/paragraphs/text-with-img.html.twig' %}
      {% endif %}
      {% if paragraphType == 'text' %}
        {% include directory ~ '/templates/content/partials/paragraphs/text.html.twig' %}
      {% endif %}
      {% if paragraphType == 'img' %}
        {% include directory ~ '/templates/content/partials/paragraphs/img.html.twig' %}
      {% endif %}
      {% if paragraphType == 'btn' %}
        {% include directory ~ '/templates/content/partials/paragraphs/btn.html.twig' %}
      {% endif %}
    {% endif %}
  {% endfor %}

{% endif %}
